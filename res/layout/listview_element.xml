<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent" android:text="Name"
		android:layout_height="wrap_content" android:id="@+id/element_name"
		android:textSize="22sp" />
	<TextView android:layout_width="fill_parent" android:text="Details"
		android:layout_height="wrap_content" android:id="@+id/element_details"
		android:textSize="14sp" android:layout_below="@id/element_name"
		android:layout_alignParentBottom="true" />
</RelativeLayout>